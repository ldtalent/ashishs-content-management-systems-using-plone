.custom-banner-button {
  padding: 1rem 2rem;
  font-size: 1.5rem;
  font-weight: bold;
  color: ghostwhite;
  background-color: slategrey;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  margin-top: 1rem;
  max-width:300px;
  margin:0px auto;
}

.tagline-custom {
  font-size: 2rem;
  font-style: italic;
  color: #fff;
  text-shadow: 2px 1px rgba(22,22,122,1);
  margin-top: 0.5rem;
}