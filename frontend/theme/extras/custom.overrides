.banner-custom{
    background:url("https://images.unsplash.com/photo-1675784173767-a38ffd54a68e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80");
